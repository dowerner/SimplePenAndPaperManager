<Window x:Class="SimplePenAndPaperManager.UserInterface.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplePenAndPaperManager"
        xmlns:zoomAndPen="clr-namespace:ZoomAndPan;assembly=ZoomAndPan"
        xmlns:converter="clr-namespace:SimplePenAndPaperManager.UserInterface.View.Converter"
        xmlns:datatemplates="clr-namespace:SimplePenAndPaperManager.UserInterface.ViewModel.DataModels"
        mc:Ignorable="d"
        Title="Simple Pen &amp; Paper Manager" Height="350" Width="525">
    <Window.Resources>
        <RoutedUICommand x:Key="Commands.ZoomOut"/>
        <RoutedUICommand x:Key="Commands.ZoomIn"/>
        <RoutedUICommand x:Key="Commands.JumpBackToPrevZoom"/>
        <RoutedUICommand x:Key="Commands.Fill"/>
        <RoutedUICommand x:Key="Commands.OneHundredPercent"/>

        <converter:ScaleToPercentConverter x:Key="ScaleToPercentConverter"/>
        <converter:ColorToBrushConverter x:Key="ColorToBrushConverter"/>

        <DataTemplate DataType="{x:Type datatemplates:RectangleData}">
            <Rectangle
                Width="{Binding Width}"
                Height="{Binding Height}"
                Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                Cursor="Hand"
                MouseDown="Rectangle_MouseDown"
                MouseUp="Rectangle_MouseUp"
                MouseMove="Rectangle_MouseMove" />
        </DataTemplate>
    </Window.Resources>
    <Grid Width="{Binding Source={x:Static datatemplates:DataModel.Instance}, Path=ContentWidth}"
          Height="{Binding Source={x:Static datatemplates:DataModel.Instance}, Path=ContentHeight}"
                >
        <ListBox
            x:Name="content"
            Background="White"
            ItemsSource="{Binding Source={x:Static datatemplates:DataModel}, Path=Rectangles}"
            Style="{StaticResource noScrollViewerListBoxStyle}"
            ItemContainerStyle="{StaticResource listBoxItemStyle}"/>
        <zoomAndPen:ZoomAndPanControl />
    </Grid>
</Window>
