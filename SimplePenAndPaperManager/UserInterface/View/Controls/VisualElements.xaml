    <DataTemplate DataType="{x:Type datamodel:WallElement}">
        <Line
            X1="{Binding X1}"
            Y1="{Binding Y1}"
            X2="{Binding X2}"
            Y2="{Binding Y2}"
            Stroke="Black"
            StrokeThickness="{Binding Thickness}"
            Cursor="Hand"
            />
    </DataTemplate>
    <!--Stroke="{Binding StrokeColor, Converter={StaticResource ColorToBrushConverter}}"-->
</ResourceDictionary>